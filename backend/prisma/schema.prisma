datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")  // A URL do banco de dados é carregada do arquivo .env
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id        Int          @id @default(autoincrement())
  email     String       @unique
  password  String
  name      String
  crea      String
  createdAt DateTime     @default(now())
  appointments Appointment[] // Relacionamento com agendamentos
}

model Appointment {
  id          Int      @id @default(autoincrement())
  date        DateTime
  description String
  userId      Int
  createdAt   DateTime @default(now())

  user        User     @relation(fields: [userId], references: [id]) // Relacionamento com o usuário
}
